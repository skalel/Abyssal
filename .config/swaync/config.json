{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "user",
  "control-center-width": 520,
  "control-center-margin-top": 0,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-window-width": 380,
  "notification-body-image-height": 240,
  "notification-body-image-width": 240,
  "timeout": 8,
  "timeout-low": 4,
  "timeout-critical": 0,
  "text-empty": "Sem notificações.",
  "fit-to-screen": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 150,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "mpris",
    "title",
    "volume",
    "notifications",
    "buttons-grid"
  ],
  "widget-config": {
    "title": {
      "text": "Notificações",
      "clear-all-button": true,
      "button-text": "Limpar..."
    },
    "mpris": {
      "image-size": 80,
      "image-radius": 10
    },
    "volume": {
      "label": "",
      "step": 5
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󰲝",
          "command": "nm-connection-editor",
          "tooltip": "Network"
        },
        {
          "label": "",
          "command": "blueman-manager",
          "tooltip": "Bluetooth"
        },
        {
          "label": "󰂛",
          "command": "swaync-client -d",
          "type": "toggle",
          "tooltip": "DND"
        },
        {
          "label": "󰈙",
          "command": "dolphin",
          "tooltip": "Files"
        },
        {
          "label": "",
          "command": "flatpak run com.ml4w.hyprlandsettings",
          "tooltip": "Config"
        },
        {
          "label": "󰍹",
          "command": "nwg-displays",
          "tooltip": "Monitor Config"
        },
        {
          "label": "󰐥",
          "command": "hyde-shell logoutlaunch 1",
          "tooltip": "Power Options"
        }
      ]
    }
  }
}